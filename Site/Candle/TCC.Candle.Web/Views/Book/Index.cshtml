@model TCC.Candle.Web.ViewModels.Book.IndexViewModel
@{
    ViewBag.Title = Model.Title;
}

<section class="container ">
    <!-- Book Info -->
    <div class="row">
        <!-- Left Side -->
        <div class="col-12 col-md-5">
            <div class="d-flex flex-column justify-content-center justify-content-md-start">
                <img class="book__cover" src="/static/images/hero.png">
            </div>
            <hr>
            <div class="d-flex flex-wrap justify-content-between align-items-center book__metadata">

                @if (!string.IsNullOrEmpty(Model.Author))
                {
                    <p class="book__info__author">
                        By @Model.Author
                    </p>
                }
                else
                {
                    <p class="book__info__author">

                    </p>
                }

                @if (Model.Pages != 0)
                {
                    <p class="book__info__Pages ">@Model.Pages pages</p>
                }
                else
                {
                    <p class="book__info__Pages">

                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.ISBN13))
                {
                    <p class="book__info__ISBN13 ">@Model.ISBN13</p>
                }
                else
                {
                    <p class="book__info__ISBN13">

                    </p>
                }


            </div>
        </div>
        <!-- End of Left Side -->
        <!-- Right side -->
        <div class="col-12 col-md-7">
            <div class="row">

                <!-- Book Title -->
                <div class="col-12">
                    <!-- Edit a book -->
                    <div class="row">
                        <div class="col-10">
                            <h1 class="book__title">@Model.Title</h1>
                        </div>
                        <div class="col-2">
                            <a class="ml-4 text-warning" title="Edit this book" asp-action="Edit" asp-route-shelfId="@Model.ShelfId" asp-controller="Book" asp-route-bookId="@Model.Id">
                                <i class="fas fa-2x fa-pen-square"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Edit a book -->

                    <small class="text-muted book__subtitle">
                        @Model.Subtitle
                    </small>

                    <div class="row my-3">
                        <div class="col-4">
                            <!-- Book Rate -->
                            <div class="book__rate mt-1">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="book__relations d-flex justify-content-start align-items-center">
                                <a asp-action="Index" asp-controller="Shelf" asp-route-Id="@Model.ShelfId">

                                    <i class="fab fa-buffer"></i> @Model.Shelf
                                </a>
                                <a asp-action="Index" asp-controller="Library" asp-route-Id="@Model.LibraryId">
                                    <i class="fas fa-coins"></i> @Model.Library
                                </a>
                            </div>
                        </div>
                    </div>

                    <hr>
                </div>
                <!-- End of Book Title -->
                <!-- Book Description -->
                <div class="col-12 ">
                    <div class="book__description">
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <div class="alert alert-info my-5 shadow-sm">
                                    You didn't provide a description
                                </div>
                            }
                        </p>
                    </div>
                </div>
                <!-- End of Book Description -->
                <!-- Tags List -->
                <div class="col-12 ">
                    <div class=" book__tags">
                        <ul class="tag_list">
                            <li>
                                <a href="#"> tag 1 </a>
                            </li>
                            <li>
                                <a href="#"> tag 1 </a>
                            </li>
                            <li>
                                <a href="#"> tag 1 </a>
                            </li>
                            <li>
                                <a href="#"> tag 1 </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- End of Tag list -->
            </div>
        </div>
        <!-- End of Right side -->
    </div>
    <!-- End of Book Info -->
    <!-- Reviews -->
    <div class="row mb-5">
        <div class="col-12 mt-5">
            <div class="d-flex justify-content-between align-items-center">
                <h3> Reviews </h3>
                <div class="review__controls">
                    <a class="ml-4 text-warning" href="#" title="Edit Libraries">
                        <i class="fas fa-2x fa-pen-square"></i>
                    </a>
                    <a class="ml-4 text-dark" href="#" title="Add new library">
                        <i class="fas fa-2x fa-plus-circle"></i>
                    </a>
                </div>
            </div>
            <hr>

        </div>
        <!-- Review -->
        <div class="col-12 col-md-6">
            <a href="#">
                <div class="card book__review mb-1">
                    <div class="card-body">
                        <p class="m-0">Pubished On (12/07/2017) </p>
                    </div>
                </div>
            </a>
        </div>
        <!-- End of Review -->

    </div>
    <!-- End of Reviews -->
</section>


@section styles{
    <link rel="stylesheet" href="/static/styles/pages/book.css" />
}