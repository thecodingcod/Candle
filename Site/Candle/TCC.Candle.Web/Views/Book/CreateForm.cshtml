@using Microsoft.EntityFrameworkCore
@using TCC.Candle.Data.Enums
@model TCC.Candle.Web.ViewModels.Book.FormViewModel
@{
    ViewBag.Title = "Add book";
}

<!-- Content -->
<section class="container ">
    <!-- Book Form -->
    <form asp-action="Create" asp-controller="Book">

        <input type="hidden" asp-for="ShelfId" />


        <div class="row justify-content-between shadow-sm mb-5 p-5">
            <!-- Form Title -->
            <div class="col-12">
                <h1>Create a new book</h1>
                <hr class="mb-5">
            </div>
            <!-- End of Form Title -->
            <!-- Image Uploader -->
            <div class="col-12 col-md-5 order-2 order-md-1">
                <div class="d-flex flex-column h-100 justify-content-start">
                    <div class="ImagePreview order-2 order-md-1">
                        <img src="http://via.placeholder.com/600x700" alt="Book Cover Preview" />
                        <div class="form-group order-1 order-md-2 my-4">
                            <label for="exampleFormControlFile1">Upload Cover</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                    </div>

                    <div class="form-row order-3 mt-3 ">
                        <button type="submit" class="btn btn-block btn-outline-primary mb-2">Save </button>
                    </div>

                </div>
            </div>
            <!-- End of Image Uploader -->
            <!-- Book Creation form -->
            <div class="col-12 col-md-6 order-1 order-md-2">
                <div class="form-row">
                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title*">
                        <span asp-validation-for="Title"></span>
                    </div>
                </div>

                <div class="form-row">

                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="SubTitle">Subtitle</label>
                        <input asp-for="SubTitle" class="form-control" placeholder="Subtitle">
                        <span asp-validation-for="SubTitle"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="Author">Author</label>
                        <input asp-for="Author" class="form-control" placeholder="Author">
                        <span asp-validation-for="Author"></span>
                    </div>
                </div>


                <div class="form-row">

                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="ISBN13">ISBN-13</label>
                        <input class="form-control" placeholder="ISBN-13">
                    </div>
                </div>

                <div class="form-row">

                    <div class="form-group col-12 col-lg-5">
                        <label asp-for="Pages">Pages</label>
                        <input asp-for="Pages" class="form-control" placeholder="Pages">
                    </div>
                    <div class="form-group col-12 col-lg-5">
                        <label asp-for="language">Language</label>
                        <select class="form-control" asp-for="language" asp-items="Html.GetEnumSelectList<Languages>()"></select>
                        <span asp-validation-for="language"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="Released">Release Date</label>
                        <input asp-for="Released" class="form-control">
                        <span asp-validation-for="Released"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-12 col-lg-10">
                        <label asp-for="Description">About</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>




                <div class="form-row">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
            <!-- End of Book Form -->

        </div>
        <!-- End of Book Creation Form -->
    </form>
</section>

@section styles
    {
    <link rel="stylesheet" href="/static/styles/pages/form.css" />
}
